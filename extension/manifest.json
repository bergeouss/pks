{
  "manifest_version": 3,
  "name": "PKS Saver",
  "version": "1.0.0",
  "description": "Save web pages to your Personal Knowledge Synthesizer",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:8100/*"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "background": {
    "scripts": ["src/background/service-worker.js"]
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
